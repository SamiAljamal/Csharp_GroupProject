<body>
  <div class="job-info">
    <h1>@Model.GetTitle()</h1>
    <h2>@Model.GetDescription()</h2>
  </div>


  <div class="jumbotron">
    <h2 class="h2-headers">Update Your Listing</h2>
    <form class="form-group" action="/jobs/@Model.GetId()/@Model.GetTitle()/updated" method="post">
      <input type="hidden" name="_method" value="PATCH">
      <h2>Title<input type="text" name="job-title" class="form-control"></h2>
      <h2>Description<input type="text" name="job-description" class="form-control"></h2>
      <h2>Salary<input type="number" name="job-salary" class="form-control"></h2>
      <button type="submit" class="btn btn-success">Update Job</button>
    </form>
    <form class="form-group" action="/jobs/@Model.GetId()/@Model.GetTitle()/deleted" method="post">
      <input type="hidden" name="_method" value="DELETE">
      <button type="submit" name="button" class="btn btn-danger">Delete Job</button>
    </form>
    <a href="/jobs/@Model.GetId()/keywords">Get keywords associated with jobs like this</a>
    <form class="form-group" action="/jobs/@Model.GetId()/keywordinfo" method="post">
      <label for="keyword">Keyword:</label>
      <input type="text" name="keyword" required>
      <button type="submit">Submit</button>
    </form>
  </div>
</body>

