<head>
  <link rel="stylesheet" href="/Content/css/bootstrap.min.css" type="text/css">
  <link rel="stylesheet" href="/Content/css/styles.css" type="text/css">
</head>
<body>
  <h1>@Model.GetName()</h1>
  <h2>View All Jobs In Category</h2>
  @foreach (var job in Model.GetJobs())
  {
    <ul>
      <li><a href="/jobs/@job.GetId()/@job.GetTitle()">@job.GetTitle()</a></li>
    </ul>
  }
  <h2>Update Your Category</h2>
  <form class="from-group" action="/categories/@Model.GetId()/@Model.GetName()/updated" method="post">
    <input type="hidden" name="_method" value="PATCH">
    <h2>Name<input type="text" name="category-name" class="form-control"></h2>
    <button type="submit" class="btn btn-success">Update Category</button>
  </form>
  <form class="form-group" action="/categories/@Model.GetId()/@Model.GetName()/deleted" method="post">
    <input type="hidden" name="_method" value="DELETE">
    <button type="submit" name="button" class="btn btn-danger">Delete Category</button>
  </form>
  <a href="/"><h1>Back Home</h1></a>
</body>
