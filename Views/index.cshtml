<head>
  <link rel="stylesheet" href="/Content/css/bootstrap.min.css" type="text/css">
  <link rel="stylesheet" href="/Content/css/styles.css" type="text/css">
  <script src="http://code.jquery.com/jquery.js"></script>
  <script type="text/javascript" src="/Content/js/bootstrap.js"></script>
  <title>Job Board</title>
</head>
<body>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Account<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="#">Create Account</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">Login</a></li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
  <div class="content">
    <h2>Log In</h2>
    <form action="/login" method="post">
      <label for="username">Username: </label>
      <input type="text" name="username" value="">
      <label for="password">Password: </label>
      <input type="text" name="password" value="">
    </form>


    <h2>Word count</h2>
    <form  action="/keyword" method="post">
      <input type="text" name="title" value="">
      <textarea name="descrip" rows="8" cols="40"></textarea>
      <input type="number" name="salary" value="">
      <button type="sumbit" name="button">Submit</button>
    </form>

    @foreach (var account in Model)
    {
      <a href="/accounts/@account.GetId()/@account.GetFirstName()"><h3>@account.GetFirstName() @account.GetLastName()</h3></a>
    }
    <p><a href="/accounts/new">Create A New Account</a></p>
    <p><a href="/accounts/">View All Accounts</a></p>
    <p><a href="/jobs/new">Create a New Job Post</a></p>
    <p><a href="/jobs">View All Jobs</a></p>
    <p><a href="/companies/new">Create A New Company</a></p>
    <p><a href="/companies">View All Companies</a></p>
    <p><a href="/categories/new">Create A New Category</a></p>
    <p><a href="/categories">View All Categories</a></p>
  </div>
</body>
